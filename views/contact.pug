extends base.pug


block style 
    style
      include ../static/style.css
      include ../static/stylecontact.css

block content 
    div.container
        h1 Contact Us
        form(action="/contact" method="post" id="form") 
            input(type="text", name="myName" placeholder="Enter your name" class="myinput" required)
            input(type="text", name="myGender" placeholder="Enter your gender" class="myinput" required)
            input(type="number", name="myAge" placeholder="Enter your Age" class="myinput" required)
            input(type="number", name="myContact" placeholder="Enter your mobile number" class="myinput" required)
            input(type="email", name="myEmail" placeholder="Enter your E-mail" class="myinput" required)
            input(type="text", name="myaddress" placeholder="Enter your address" class="myinput" required)
            input(type="text", name="myconcern" placeholder="Enter your concern" class="myinput")
            div 
                button(type="submit" class="btn") Submit Now 
                button(type="reset" class="btn") Reset now 
block scripts 
    script(src='../static/script.js')
